{
  "manifest_version": 3,
  "name": "幻影",
  "version": "1.7.8",
  "description": "专业的SRC漏洞挖掘辅助工具，自动提取页面中的敏感信息",
  "author": "Phantom&yihuo&Xuan8a1",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "windows",
    "cookies",
    "offscreen",
    "scripting",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "filters/api-filter.js", 
        "filters/domain-phone-filter.js", 
        "filters/id-card-filter.js",
        "src/scanner/PatternExtractor.js",
        "src/scanner/ContentExtractor.js",
        "libs/acorn.min.js",
        "src/scanner/ast/parser.js",
        "src/scanner/ast/utils/hash.js",
        "src/scanner/ast/utils/context.js",
        "src/scanner/ast/visitors/ASTVisitor.js",
        "src/scanner/ast/visitors/CredentialVisitor.js",
        "src/scanner/ast/visitors/APIEndpointVisitor.js",
        "src/scanner/ast/visitors/SensitiveFunctionVisitor.js",
        "src/scanner/ast/visitors/ConfigObjectVisitor.js",
        "src/scanner/ast/visitors/EncodedStringVisitor.js",
        "src/scanner/ast/ASTExtractor.js",
        "src/scanner/ast/utils/ResultMerger.js",
        "src/scanner/ast/ASTBridge.js",
        "src/scanner/ast/index.js",
        "src/scanner/vue/utils/serializer.js",
        "src/scanner/vue/utils/pathUtils.js",
        "src/scanner/vue/VueFinder.js",
        "src/scanner/vue/RouterAnalyzer.js",
        "src/scanner/vue/GuardPatcher.js",
        "src/scanner/vue/VueDetector.js",
        "src/scanner/vue/VueDetectorBridge.js",
        "src/scanner/vue/index.js",
        "src/scanner/webpack/utils/urlUtils.js",
        "src/scanner/webpack/utils/patternUtils.js",
        "src/scanner/webpack/utils/errorHandler.js",
        "src/scanner/webpack/utils/chunkProcessor.js",
        "src/scanner/webpack/WebpackDetector.js",
        "src/scanner/webpack/ChunkAnalyzer.js",
        "src/scanner/webpack/SourceMapParser.js",
        "src/scanner/webpack/RuntimeAnalyzer.js",
        "src/scanner/webpack/ModuleAnalyzer.js",
        "src/scanner/webpack/SensitiveExtractor.js",
        "src/scanner/webpack/WebpackScannerBridge.js",
        "src/scanner/webpack/WebpackResultRenderer.js",
        "src/scanner/webpack/index.js",
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "filters/api-filter.js", 
        "filters/domain-phone-filter.js", 
        "filters/id-card-filter.js",
        "src/scanner/PatternExtractor.js",
        "src/scanner/ContentExtractor.js",
        "src/scanner/DeepScanWindow.js",
        "src/core/injector.js",
        "test-results.html", 
        "test-window.html", 
        "deep-scan-window.html",
        "src/api/test-window-script.js",
        "src/scanner/deep-scan-window-script.js",
        "deep-scan-fix-patch.js",
        "offscreen.html",
        "offscreen.js",
        "libs/acorn.min.js",
        "src/scanner/ast/parser.js",
        "src/scanner/ast/utils/hash.js",
        "src/scanner/ast/utils/context.js",
        "src/scanner/ast/visitors/ASTVisitor.js",
        "src/scanner/ast/visitors/CredentialVisitor.js",
        "src/scanner/ast/visitors/APIEndpointVisitor.js",
        "src/scanner/ast/visitors/SensitiveFunctionVisitor.js",
        "src/scanner/ast/visitors/ConfigObjectVisitor.js",
        "src/scanner/ast/visitors/EncodedStringVisitor.js",
        "src/scanner/ast/ASTExtractor.js",
        "src/scanner/ast/utils/ResultMerger.js",
        "src/scanner/ast/ASTBridge.js",
        "src/scanner/ast/index.js",
        "src/scanner/vue/utils/serializer.js",
        "src/scanner/vue/utils/pathUtils.js",
        "src/scanner/vue/VueFinder.js",
        "src/scanner/vue/RouterAnalyzer.js",
        "src/scanner/vue/GuardPatcher.js",
        "src/scanner/vue/VueDetector.js",
        "src/scanner/vue/VueDetectorBridge.js",
        "src/scanner/vue/index.js",
        "src/scanner/webpack/utils/urlUtils.js",
        "src/scanner/webpack/utils/patternUtils.js",
        "src/scanner/webpack/utils/errorHandler.js",
        "src/scanner/webpack/utils/chunkProcessor.js",
        "src/scanner/webpack/WebpackDetector.js",
        "src/scanner/webpack/ChunkAnalyzer.js",
        "src/scanner/webpack/SourceMapParser.js",
        "src/scanner/webpack/RuntimeAnalyzer.js",
        "src/scanner/webpack/ModuleAnalyzer.js",
        "src/scanner/webpack/SensitiveExtractor.js",
        "src/scanner/webpack/WebpackScannerBridge.js",
        "src/scanner/webpack/WebpackResultRenderer.js",
        "src/scanner/webpack/index.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "幻影",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }

}

